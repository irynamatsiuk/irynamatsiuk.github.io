<!-- My Files link (only for xs screens)-->
<a href="/home" class="d-sm-none"><h4 class="mb-4 text-center">Home</h4></a>

<div class="container mb-5 p-0">
  <div class="row justify-content-center">
    <div class="col-sm-11 col-md-10 col-lg-8">
      <h4 class="text-center mb-4">
        Files in <span class="fw-bold"> <%= currentFolder.name %></span>
      </h4>

      <% if (files.length === 0) { %>
      <p class="text-center text-muted">No files in this folder yet</p>
      <% } else { %>
      <ul class="list-group">
        <% files.forEach(file => { %>
        <div class="container p-0 align-items-center">
          <%- include('partials/fileListItem', {file: file}) %>
        </div>
        <% }) %> <% } %>
      </ul>
    </div>
  </div>
</div>
