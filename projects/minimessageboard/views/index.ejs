<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head')%>
  <body>
    <div class="container">
      <%- include('partials/navbar') %>
      <ul class="all-messages">
        <% messages.toReversed().map((message) => { %>
        <div class="message">
          <p class="user"><%= message.user %>:</p>
          <a href="/<%=message.id%>">
            <span>details</span>
          </a>
          <p class="text"><%= message.text %></p>
        </div>
        <% })%>
      </ul>
    </div>
  </body>
</html>
